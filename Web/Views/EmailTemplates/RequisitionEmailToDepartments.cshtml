@model CorporateAndFinance.Core.ViewModel.RequisitionVM
 <!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Requisition</title>
    
    <style>
        @Model.StyleSheet
    </style>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
</head>
<body>
 
            <table border="0" cellspacing="0" cellpadding="0" >
                <tbody>
                    <tr class="main-header">
                        <td>
                            <p class="MsoNormal">
                                <span style="font-size:11.0pt;font-family:Calibri,sans-serif">
                                    <img border="0" src="cid:header-logo">
                                </span>
                            </p>
                        </td>
                    </tr>
                    <tr>
                        <td style="padding: 0 !important">
                            <div style="text-align:left;width:100%">Dear Manager,</div>
                            <br />
                            <div>
                                New requisition has been created and you have to Approve/Reject Allocation based on user billing percentage on your department.
                                <br />

                            </div>
                            <div>
                               
                                <h2>Requisition Information</h2>
                                <table>
                                    <tr>
                                        <td style="width:50%"><b>Requisition No.</b></td>
                                        <td style="width:50%">@Model.FormatedRequisitionId</td>
                                    </tr>
                                    <tr>
                                        <td><b>Job Title</b></td>
                                        <td>@Model.JobTitle</td>
                                    </tr>
                                    <tr>
                                        <td><b>No of Position</b></td>
                                        <td>@Model.NoOfPosition</td>
                                    </tr>
                                    <tr>
                                        <td><b>From Department</b></td>
                                        <td>@Model.DepartmentName</td>
                                        
                                    </tr>
                                    <tr>
                                        <td><b>Requisition Date</b></td>
                                        <td>@Model.RequisitionDate</td>

                                    </tr>
                                   
                                </table>
                            </div>
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <div>
                                <h3>Allocation Details</h3>
                                <table>
                                    <tr>
                                        <td style="width:25%"><b>Allocation Number</b></td>
                                        <td style="width:25%"><b>Department</b></td>
                                        <td style="width:25%"><b>Percentage</b></td>
                                       
                                    </tr>
                                    @foreach (var detail in Model.UserAllocations)
                                    {
                                        <tr>
                                            <td> @detail.FormatedUserAllocationID</td>
                                            <td>@detail.DepartmentName</td>
                                            <td>@detail.Percentage</td>
                                            
                                        </tr>
                                    }
                                </table>
                            </div>
                        </td>
                    </tr>
                    <tr class="main-footer">

                        <td>
                            <p align="center">
                                <span>
                                    &copy; @DateTime.Now.Year - Consulting And Finance - <a href="http://www.arthurlawrence.net" target="_blank">Arthur Lawrence</a> All rights reserved.
                                </span>
                            </p>
                        </td>
                    </tr>
                </tbody>
            </table>
       
</body>
</html>
